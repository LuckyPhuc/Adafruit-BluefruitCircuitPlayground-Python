def greet(lang):
    if lang == 'es':
        return'Hola'
    elif lang == 'fr':
        return'Bonjour'
    elif lang=='v':
        return'Xin Chao'
    elif lang =='cn':
        return 'ni hao'
    elif lang =='noak':
        return'gkljhwewg'
    else:
        return'Hello'

def main():
    print(greet('en'),'Glenn')
    print(greet('fr'),'Sabine')
    print(greet('es'),'Carlos')
    print(greet('v'),'Orbital')
    print(greet('cn'),'Mormandy')
    print(greet('naok'),'U-sbek')
    
main()
print(greet(input("What language do you speak? (en,fr,es,v,cn,noak) ")),input('What is your name? '))
